<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Entrada de Dados" Height="300" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Name="PromptText" 
                   HorizontalAlignment="Center" VerticalAlignment="Top"
                   TextWrapping="Wrap"
                   Margin="10"/>
        <TextBox Name="InputBox" Width="200" Height="25"
                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Name="ConfirmButton" Content="Confirmar" Width="100" Height="30"
                HorizontalAlignment="Center" VerticalAlignment="Bottom"
                Margin="0,0,0,20" Click="OnConfirm"/>
    </Grid>
</Window>
